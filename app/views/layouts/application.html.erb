<!DOCTYPE html>
<html>
<head>
  	<title>Capo</title>
  	<%= stylesheet_link_tag 'main' %>
  	<%= javascript_include_tag :defaults %>
  	<%= csrf_meta_tag %>  	
</head>
<body>
	<div class="container">
		<div class="header">
			<%= render 'layouts/header'%>
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
		</div>
		<div class="main">
			<%= yield %>
		</div>
		<div class="footer">
			<%= render 'layouts/footer' %>
		</div>
	</div>
</body>
</html>
