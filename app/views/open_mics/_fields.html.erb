<div class="field">
	<%= f.label :name, 'Name of Open Mic or Venue' %>
	<br />
	<%= f.text_field :name %>
</div>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
	<%= f.label :day_of_week %>
	<br />
	<%= f.select :day_of_week, [['Sunday', 'Sunday'], ['Monday', 'Monday'], ['Tuesday', 'Tuesday'], ['Wednesday', 'Wednesday'], ['Thursday', 'Thursday'], ['Friday', 'Friday'], ['Saturday', 'Saturday']] %>
</div>
<div class="field">
	<%= f.label :start_time %> (examples '09:00' or '23:00')
	<br />
	<%= f.text_field :start_time %>
</div>
<div class="field">
	<%= f.label :end_time %> (examples: '9:00' or '23:00')
	<br />
	<%= f.text_field :end_time %>
</div>
<div class="field">
	<%= f.label :street_1 %>
	<br />
	<%= f.text_field :street_1 %>
</div>
<div class="field">
	<%= f.label :street_2 %>
	<br />
	<%= f.text_field :street_2 %>
</div>
<div class="field">
	<%= f.label :city %>
	<br />
	<%= f.text_field :city %>
</div>
<div class="field">
	<%= f.label :prov_state, 'Province/State' %>
	<br />
	<select id="open_mic_prov_state" name="open_mic[prov_state]">
  		<%= options_for_select( [[ "Select a Province/State", "" ]] + 
  			provinces_and_states, :selected => @open_mic.prov_state )%>
	</select>
</div>
<div class="field">
	<%= f.label :postal_zip, 'Postal Code/Zip Code' %>
	<br />
	<%= f.text_field :postal_zip %>
</div>
<div class="field">
	<%= f.label :country %>
	<br />
	<%= f.text_field :country %>
</div>
<div class="field">
	<%= f.label :url, 'Official Home Page URL' %>
	<br />
	<%= f.text_field :url %>
</div>

<script type="text/javascript">
	$("#open_mic_prov_state").change(function(){
		if( ($("#open_mic_prov_state").val() == "AB") ||
			($("#open_mic_prov_state").val() == "BC") ||
			($("#open_mic_prov_state").val() == "MB") ||
			($("#open_mic_prov_state").val() == "NB") ||
			($("#open_mic_prov_state").val() == "NL") ||
			($("#open_mic_prov_state").val() == "NT") ||
			($("#open_mic_prov_state").val() == "NS") ||
			($("#open_mic_prov_state").val() == "NU") ||
			($("#open_mic_prov_state").val() == "ON") ||
			($("#open_mic_prov_state").val() == "QC") ||
			($("#open_mic_prov_state").val() == "SK") ||
			($("#open_mic_prov_state").val() == "YT")) {
			$("#open_mic_country").val("Canada");		
		}
		else {
			$("#open_mic_country").val("United States");
		}
	});
</script>

