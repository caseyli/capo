<h1>All News for <%= @open_mic.name %></h1>

<ul>
	<% if @open_mic.posts.empty? %>
		<li> There is currently no news for this Open Mic.</li>
	<% else %>
		<% @open_mic.posts.each do |post| %>
			<li>
				<%= post.updated_at.strftime("%B %d, %Y: ") + " " + post.body %> 
				<% if can_manage_posts_for(@open_mic) %>
					| <%= link_to "delete", open_mic_post_path(@open_mic, post), 
								:method => :delete, 
								:confirm => "Are you sure you want to delete #{post.body}?", 
								:title => "Delete Post?" %>
				<% end %>
			</li>
		<% end %>
	<% end %>
</ul>


<%= link_to "Back", @open_mic %>
